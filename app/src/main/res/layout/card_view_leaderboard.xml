<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardBackgroundColor="@color/bg_main"
        card_view:cardCornerRadius="5dp"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:id="@+id/myScoreCard"
        android:longClickable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_weight="9"
            android:gravity="left">
        <TextView
            android:id="@+id/leaderboardUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/leaderboardEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="usernamexyz@gmail.com"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:textSize="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="right">
            <TextView
                android:id="@+id/leaderboardScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score: 500"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/leaderboardRank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rank: 1"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:textSize="16dp"/>
        </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>